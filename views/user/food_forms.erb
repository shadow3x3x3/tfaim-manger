<style>
.container-fluid {
  width: 400px;
  margin: 0 auto;
}

.foods-form {
  font-size: 20px;
}

input[type=checkbox] {
  width: 20px;
  height: 15px;
}
</style>


<div id="page-wrapper">
  <div class="container">
    <h1>選擇食品種類  <small>濃度(單位: mg/kg – mg/L)</small></h1>
    <form action="/result" class="form foods-form" method="post" role="form">
      <div class="form-group">
        <% @food_list.each_with_index do |list, index| %>
        <div class="row">
          <div class="col-md-6 checkbox"><%= list %></div>
          <div class="col-md-4">
            <input type="number" value="0" min=0 name="<%= index %>" class="form-control" step="0.01">    
          </div>
        </div>
        <% end %>
        <div class="col-md-8">
          <a href="/food_choice" class="btn btn-info">上一步</a>
          <button type="submit" class="btn btn-primary" name="subject" value="rechoose">繼續選擇</button>           
          <button type="submit" class="btn btn-primary" name="subject" value="next">完成</button> 
          <input type="hidden" name="food-kind" value="<%= @food_kind %>"> 
        </div>
      </div>
    </form> 
  </div>
</div>